<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:elevation="200dp"
            card_view:cardCornerRadius="8dp"
            android:layout_marginLeft="@dimen/standard_padding_large"
            android:layout_marginRight="@dimen/standard_padding_large"
            >

            <!--> layout for myscrollLinearlayout<-->
            <ScrollView
                android:id="@+id/myscrollLinearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/job_edit_background"
                    android:clickable="true"
                    android:orientation="vertical">

                    <!--> layout for Job ID<-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/standard_padding_large"
                            android:src="@drawable/ic_work_36" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="60dp"
                            android:gravity="center_vertical"
                            android:text="@string/job_edit_JobID"
                            android:textColor="@color/jobIofoKeyword"
                            android:textSize="14sp"
                            android:id="@+id/textView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:textColor="@color/job_edit_text_color"
                            android:textSize="14sp"
                            android:id = "@+id/job_edit_jobID"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@+id/textView" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CCCCCC"
                        ></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#CCCCCC"
                        ></View>

                    <!--> layout for Job Type<-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/job_edit_jobType"
                            android:textColor="@color/jobIofoKeyword"
                            android:textSize="14sp"
                            android:textIsSelectable="false" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/job_edit_jobType"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginRight="@dimen/standard_padding_large"
                                android:background="#CCCCCC"
                                ></View>
                        </LinearLayout>
                    </LinearLayout>

                    <!--> layout for Location<-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/job_edit_location"
                            android:textColor="@color/jobIofoKeyword"
                            android:textSize="14sp"
                            android:textIsSelectable="false" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/job_edit_location"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginRight="@dimen/standard_padding_large"
                                android:background="#CCCCCC"
                                ></View>
                        </LinearLayout>
                    </LinearLayout>

                    <!--> layout for Job Priority<-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/job_edit_jobPriority"
                            android:textColor="@color/jobIofoKeyword"
                            android:textSize="14sp"
                            android:textIsSelectable="false" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/job_edit_priority"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#CCCCCC"
                                android:layout_marginRight="@dimen/standard_padding_large"
                                ></View>
                        </LinearLayout>
                    </LinearLayout>

                    <!--> layout for Job Quantity<-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/job_edit_quantity"
                            android:textColor="@color/jobIofoKeyword"
                            android:textSize="14sp"
                            android:textIsSelectable="false" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/job_edit_quantity"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginRight="@dimen/standard_padding_large"
                                android:background="#CCCCCC"
                                ></View>
                        </LinearLayout>
                    </LinearLayout>

                    <!--> layout for Job Due Time<-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/job_edit_dueTime"
                            android:textColor="@color/jobIofoKeyword"
                            android:textSize="14sp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/job_edit_dueTime"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginRight="@dimen/standard_padding_large"
                                android:background="#CCCCCC"
                                ></View>
                        </LinearLayout>
                    </LinearLayout>

                    <!--> layout for Job Description<-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/job_edit_jobDescription"
                            android:textColor="@color/jobIofoKeyword"
                            android:textSize="14sp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/job_edit_jobDescription"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginRight="@dimen/standard_padding_large"
                                android:background="#CCCCCC"
                                ></View>
                        </LinearLayout>
                    </LinearLayout>

                    <!--> layout for Job Notes<-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/job_edit_notes"
                            android:textColor="@color/jobIofoKeyword"
                            android:textSize="14sp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/job_edit_notes"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginRight="@dimen/standard_padding_large"
                                android:background="#CCCCCC"
                                ></View>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CCCCCC"
                        ></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#CCCCCC"
                        ></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:id="@+id/job_edit_bid_layout"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <!--> layout for Bid job<-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <EditText
                                android:hint="@string/edit_job_bidAmount"
                                android:layout_weight="1"
                                android:layout_marginTop="@dimen/standard_padding_large"
                                android:layout_height="match_parent"
                                android:textSize="18sp"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/job_edit_bidAmount"
                                android:visibility="invisible"
                                android:layout_width="0dp"
                                android:layout_marginLeft="@dimen/standard_padding_large"
                                android:textColor="@color/job_edit_text_color" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:text="@string/edit_job_bid_button"
                                android:textStyle="bold"
                                android:background="@android:color/white"
                                android:textColor="@color/jobIofoKeyword"
                                android:id = "@+id/job_edit_bid_btn"
                                android:visibility="invisible"
                                android:layout_marginBottom="@dimen/standard_padding_small"
                                android:layout_marginRight="@dimen/standard_padding_large"
                                android:layout_marginLeft="@dimen/standard_padding_large"
                                android:layout_marginTop="@dimen/standard_padding_large" />
                        </LinearLayout>

                        <!--> layout for bid job information<-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/job_edit_bidInfo"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/standard_padding_small"
                                android:layout_marginTop="@dimen/standard_padding_small"
                                android:layout_marginBottom="@dimen/standard_padding_small"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Job bid info"
                                android:visibility="invisible"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CCCCCC"
                        ></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#CCCCCC"
                        ></View>
                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>



