<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:padding="@dimen/standard_padding_small"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView android:id="@+id/job_deatails_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="@dimen/standard_padding"
		android:src="@drawable/ic_job_24"/>

	<TextView android:id="@+id/job_deatails_ID"
		android:layout_margin="@dimen/standard_padding_small"
		android:textStyle="bold"
		android:textColor="@color/jobID_blue"
		android:layout_gravity="center_vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<TextView android:id="@+id/job_details_content"
		android:layout_margin="@dimen/standard_padding_small"
		android:textStyle="bold"
		android:layout_gravity="center_vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

</LinearLayout>
